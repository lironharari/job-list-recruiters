{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020", "DOM"],
    "types": ["node", "jest"],
    "outDir": "dist",
    "rootDir": ".",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["app.ts", "server.ts", "config/**/*.ts", "models/**/*.ts", "routes/**/*.ts", "middleware/**/*.ts", "utils/**/*.ts", "__tests__/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
