{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": ["app.ts", "server.ts", "config/**/*.ts", "models/**/*.ts", "routes/**/*.ts", "middleware/**/*.ts", "utils/**/*.ts"],
  "exclude": ["node_modules", "dist", "__tests__", "**/*.test.ts"]
}
